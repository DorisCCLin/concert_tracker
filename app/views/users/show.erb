<p>These is my wishlist</p>
</div>
<div id="tab3" class="tab">
<p>This is the history</p>
</div>
</div>
</div>
</div>	






<% end %>


        
    <% else %>
    <h1>please login</h1>    
	<% end %>
<% else %>
      <h2>this user doen't exist anymore!</h2>
<%end%>	


