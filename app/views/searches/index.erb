<div class="search">

<%= form_tag search_path do %>
    <%= text_field_tag :keyword %>
    <%= hidden_field_tag :date  %>
   <%= submit_tag "Search" %>
  <% end %>
<br/>


<%if @results[:page][:totalElements] != 0 %>
  <p> We found <%= @results[:_embedded][:events].length %> results for you:</p>
  <% @results[:_embedded][:events].each do |event| %>   
    <div><h3><strong><u><%= event[:name] %></strong></u></h3></div>
    <div><a href='/events/<%= event[:id] %>'><img src="<%= event[:images][2][:url] %>" width='305px'></a></div>
    <p><%= event[:dates][:start][:localDate]%> <%= event[:dates][:start][:localTime]%></p>
    <p>Venue: <%= event[:_embedded][:venues][0][:name]%></p></br>
  <% end %>
  <% else %>

    <h1>Opps, we can't find anything for you</h1>
<% end %>  

</div>